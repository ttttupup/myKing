<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hugy.kingeconomy">

    <!-- 使用网络功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 读写SD卡权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.RegisterFirstActivity" />
        <activity android:name=".view.PasswordActivity" />
        <activity android:name=".view.FindPasswordActivity" />
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.HousesInfoActivity" />
        <activity android:name=".view.FindPasswordSubmitActivity" />
        <activity android:name=".view.AuthenticationActivity" />
        <activity android:name=".view.IdentityCardActivity" />

        <service android:name=".sevice.VerifyCodeService" />
        <service android:name=".sevice.TestCode" />

        <activity android:name=".view.TestActivity"></activity>
    </application>

</manifest>