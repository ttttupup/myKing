<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <stroke android:color="@color/app_color" android:width="1dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <stroke android:color="@color/solid_grey" android:width="1dp"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>