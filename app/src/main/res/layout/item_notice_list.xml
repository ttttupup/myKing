<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_left_15"
    android:layout_marginRight="@dimen/margin_right_15"
    android:background="@color/base_white"
    android:paddingLeft="@dimen/padding_left_15"
    android:paddingRight="@dimen/padding_right_15">

    <TextView
        android:id="@+id/tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_20"
        android:text="网络游戏迎转型升级 改变成取胜关键"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_content_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_20"
        android:lines="2"
        android:text="网络游戏迎转型升级改变成取胜改变成取胜\n 改变成取胜关键"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_title" />

    <View
        android:id="@+id/bg_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/cut_line"
        android:layout_marginBottom="@dimen/margin_bottom_10"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_20"
        android:layout_marginTop="@dimen/margin_top_40"
        android:drawableRight="@mipmap/more_unfold_2"
        android:text="查看详情"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_desc" />

</android.support.constraint.ConstraintLayout>
