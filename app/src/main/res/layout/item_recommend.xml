<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recommend_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/banner_2" />

        <TextView
            android:id="@+id/tv_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/font_back"
            android:text="玉屏山A座" />

        <TextView
            android:id="@+id/tv_recommend_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="商铺" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_yong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:src="@mipmap/text_yong"
            />

        <TextView
            android:id="@+id/tv_recommend_per"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_yong"
            android:text="12.56%"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_recommend_price"
            android:layout_toEndOf="@+id/tv_recommend_per"
            android:layout_marginLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="均价：55800/平"
            android:layout_alignBaseline="@+id/tv_recommend_per"
            android:textColor="@color/font_grey"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:src="@mipmap/collect" />

            <TextView
                android:id="@+id/tv_recommend_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_collect"
                android:text="235人收藏"
                android:textColor="@color/font_click"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
